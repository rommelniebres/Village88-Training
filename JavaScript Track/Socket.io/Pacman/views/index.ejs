<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pacman</title>
    <link rel="stylesheet" href="../stylesheets/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="../js/app.js"></script>
</head>

<body>
    <section>
        <div id='world'></div>
        <div id='pacman'></div>
        <div id='ghost'></div>
        <div id='score'></div>
        <h2>Conversation Board</h2>
        <div id="conversation">
            <div id="chat">
            </div>
            <form>
                <textarea name="message" placeholder="Enter your message here!" rows="6" cols="40"
                    id="message"></textarea>
                <input type="hidden" name="current_user" id="current_user">
                <input type="submit" value="Send">
            </form>
        </div>
    </section>
    <section>
        <div id='mini-view1' class="mini-view"></div>
        <div id='mini-view2' class="mini-view"></div>
        <div id='mini-view3' class="mini-view"></div>
        <div id='mini-view4' class="mini-view"></div>
    </section>


</body>

</html>